{
  "name": "sys-ticket",
  "version": "1.0.0",
  "description": "Sistema completo de gestão de tickets e atendimento ao cliente com integração SIGE Cloud",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:mobile": "npm run build --workspace=apps/mobile",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "npm run migration:run --workspace=apps/backend",
    "db:seed": "npm run seed:run --workspace=apps/backend"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seu-usuario/sys-ticket.git"
  },
  "keywords": [
    "ticket-system",
    "helpdesk",
    "service-desk",
    "sige-cloud",
    "nestjs",
    "react",
    "react-native"
  ],
  "author": "Sua Empresa",
  "license": "UNLICENSED"
}
